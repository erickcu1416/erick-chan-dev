---
import { getCurrentLocale, t, getLocalizedPath } from '@i18n/index';

const locale = getCurrentLocale(Astro.url.pathname);
const currentYear = new Date().getFullYear();
---

<footer class="main-footer bgc-black text-white rel z-1">
  <!-- Marquee -->
  <div class="footer-marquee pt-60 pb-75 rpy-90 rel">
    <div class="container blank-container bordered-x"></div>
    <span class="marquee-wrap">
      <span class="marquee-inner left">
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
      </span>
      <span class="marquee-inner left">
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
      </span>
      <span class="marquee-inner left">
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
        <span class="marquee-item">Get In Touch</span>
        <span class="marquee-item">_</span>
      </span>
    </span>
  </div>

  <div class="container bordered-x pb-50">
    <div class="row justify-content-between">
      <!-- Newsletter -->
      <div class="col-lg-4 col-sm-8">
        <div class="footer-widget footer-newsletter">
          <div class="footer-logo mb-20">
            <a href={getLocalizedPath('/', locale)}>
              <img
                src="/assets/images/logos/logo-white.svg"
                alt="Erick Chan Logo"
                width="150"
                height="40"
                loading="lazy"
              />
            </a>
          </div>
          <p>{t('footer.description', locale)}</p>
          <form class="newsletter-form mt-25" action="#" method="POST">
            <label for="news-email"><i class="fas fa-envelope"></i></label>
            <input
              id="news-email"
              type="email"
              name="email"
              placeholder={t('footer.newsletter.placeholder', locale)}
              required
              autocomplete="email"
            />
            <button type="submit" class="theme-btn btn-small hover-primary" data-hover={t('footer.newsletter.button', locale)}>
              <span>{t('footer.newsletter.button', locale)}</span>
            </button>
          </form>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="row justify-content-between">
          <!-- Location -->
          <div class="col-md-4 col-sm-6">
            <div class="footer-widget footer-text">
              <div class="footer-title">
                <h6>{t('footer.location.title', locale)}</h6>
              </div>
              <div class="text">{t('footer.location.address', locale)}</div>
            </div>
          </div>

          <!-- Contact -->
          <div class="col-xl-3 col-md-4 col-sm-6">
            <div class="footer-widget footer-text">
              <div class="footer-title">
                <h6>{t('footer.contact.title', locale)}</h6>
              </div>
              <div class="text">
                <a href={`mailto:${t('footer.contact.email', locale)}`}>{t('footer.contact.email', locale)}</a>
                <br />
                <a href={`tel:${t('footer.contact.phone', locale).replace(/\s/g, '')}`}>{t('footer.contact.phone', locale)}</a>
              </div>
            </div>
          </div>

          <!-- Social -->
          <div class="col-md-4 col-sm-6">
            <div class="footer-widget footer-contact">
              <div class="footer-title">
                <h6>{t('footer.social.title', locale)}</h6>
              </div>
              <div class="social-style-two mt-15">
                <a href="https://github.com/erickchan" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                <a href="https://linkedin.com/in/erickchan" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                <a href="https://twitter.com/erickchan" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container bordered-x bordered-top pt-25 pb-10">
      <div class="row">
        <div class="col-lg-5">
          <div class="copyright-text text-center text-lg-start">
            <p>
              Copyright Â© {currentYear}
              <a href={getLocalizedPath('/', locale)}>Erick Chan</a>, {t('footer.copyright', locale)}
            </p>
          </div>
        </div>
        <div class="col-lg-7 text-center text-lg-end">
          <ul class="footer-bottom-nav">
            <li><a href={getLocalizedPath(locale === 'es' ? '/privacidad' : '/privacy', locale)}>{t('footer.links.privacy', locale)}</a></li>
            <li><a href={getLocalizedPath(locale === 'es' ? '/terminos' : '/terms', locale)}>{t('footer.links.terms', locale)}</a></li>
            <li><a href={getLocalizedPath(locale === 'es' ? '/faq' : '/faq', locale)}>{t('footer.links.faq', locale)}</a></li>
          </ul>
        </div>
      </div>
      <!-- Scroll Top Button -->
      <button class="scroll-top scroll-to-target" data-target="html" aria-label="Scroll to top">
        <i class="far fa-arrow-up"></i>
      </button>
    </div>
  </div>

  <!-- Footer Shape -->
  <div class="footer-shapes">
    <div class="shape">
      <img src="/assets/images/shapes/footer-shape.png" alt="" loading="lazy" width="300" height="300" />
    </div>
  </div>
</footer>
