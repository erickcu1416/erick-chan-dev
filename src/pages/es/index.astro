---
import BaseLayout from '@layouts/BaseLayout.astro';
import { t } from '@i18n/index';

const locale = 'es';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero-area-four bgc-black text-white rel z-2">
    <div class="container px-xxl-0 bordered-x pt-180 rpt-90">
      <div class="row pt-50">
        <div class="col-xl-10">
          <div class="hero-content-four">
            <h1>{t('hero.title', locale)}</h1>
            <p class="hero-description">{t('hero.subtitle', locale)}</p>
            <a href="/es/casos-de-uso" class="theme-btn mt-30 rmt-15 mb-65 rmb-30" data-hover={t('hero.cta', locale)}>
              <span>{t('hero.cta', locale)}</span>
            </a>
            <h5>5+ {t('hero.trustedClients', locale)}</h5>
            <div class="trusted-clients mt-25">
              <div class="client-avatar"></div>
              <div class="client-avatar"></div>
              <div class="client-avatar"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="hero-area-shapes">
      <div class="shape"></div>
    </div>
  </section>

  <!-- Counter Section -->
  <div class="counter-area bgc-black pt-120 rpt-100 rel z-1">
    <div class="container bordered-x">
      <div class="counter-wrap">
        <div class="row">
          <div class="col-md-4 col-sm-6">
            <div class="counter-item counter-text-wrap">
              <span class="count-text">25+</span>
              <span class="counter-title">{t('counter.projects', locale)}</span>
              <div class="text">{t('counter.projectsDesc', locale)}</div>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="counter-item counter-text-wrap">
              <span class="count-text">10+</span>
              <span class="counter-title">{t('counter.clients', locale)}</span>
              <div class="text">{t('counter.clientsDesc', locale)}</div>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="counter-item counter-text-wrap">
              <span class="count-text">5+</span>
              <span class="counter-title">{t('counter.experience', locale)}</span>
              <div class="text">{t('counter.experienceDesc', locale)}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- About Section -->
  <section class="about-area rel z-1">
    <div class="container bordered-x pt-130 rpt-100 pb-100">
      <div class="row justify-content-between align-items-center">
        <div class="col-xl-4 col-lg-5">
          <div class="about-circles rmb-55">
            <div class="circle">{t('about.circles.development', locale)}</div>
            <div class="circle mx-auto bgc-black text-white">{t('about.circles.webDesign', locale)}</div>
            <div class="circle ms-auto bgc-primary">{t('about.circles.mobileApps', locale)}</div>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="about-content-four">
            <div class="section-title mb-40">
              <span class="subtitle mt-10 mb-15">{t('about.subtitle', locale)}</span>
              <h2>{t('about.title', locale)}</h2>
            </div>
            <p>{t('about.description', locale)}</p>
            <ul class="list-style-one my-30">
              <li>{t('about.items.design', locale)}</li>
              <li>{t('about.items.seo', locale)}</li>
              <li>{t('about.items.web', locale)}</li>
              <li>{t('about.items.mobile', locale)}</li>
            </ul>
            <a href="/es/casos-de-uso" class="theme-btn style-two" data-hover={t('about.cta', locale)}>
              <span>{t('about.cta', locale)}</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-area">
    <div class="container px-0 bordered-x bordered-top pt-130 rpt-100 pb-5">
      <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-9 col-md-11">
          <div class="section-title mb-50 text-center">
            <span class="subtitle mt-10 mb-15">{t('services.subtitle', locale)}</span>
            <h2>{t('services.title', locale)}</h2>
          </div>
        </div>
      </div>
      <div class="service-timeline">
        <div class="service-limeline-item">
          <span class="number">01</span>
          <span class="h1"><a href="/es/servicios">{t('services.webDesign', locale)}</a></span>
          <a href="/es/servicios" class="detail-btn" aria-label={t('services.webDesign', locale)}>→</a>
        </div>
        <div class="service-limeline-item">
          <span class="number">02</span>
          <span class="h1"><a href="/es/servicios">{t('services.branding', locale)}</a></span>
          <a href="/es/servicios" class="detail-btn" aria-label={t('services.branding', locale)}>→</a>
        </div>
        <div class="service-limeline-item">
          <span class="number">03</span>
          <span class="h1"><a href="/es/servicios">{t('services.seo', locale)}</a></span>
          <a href="/es/servicios" class="detail-btn" aria-label={t('services.seo', locale)}>→</a>
        </div>
        <div class="service-limeline-item">
          <span class="number">04</span>
          <span class="h1"><a href="/es/servicios">{t('services.motionDesign', locale)}</a></span>
          <a href="/es/servicios" class="detail-btn" aria-label={t('services.motionDesign', locale)}>→</a>
        </div>
        <div class="service-limeline-item">
          <span class="number">05</span>
          <span class="h1"><a href="/es/servicios">{t('services.animation', locale)}</a></span>
          <a href="/es/servicios" class="detail-btn" aria-label={t('services.animation', locale)}>→</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-area-two rel z-1">
    <div class="container px-sm-0 bordered-x py-130 rpy-100">
      <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-9 col-md-11 text-center">
          <div class="section-title mx-xl-3 mb-30">
            <h2>{t('cta.title', locale)}</h2>
            <p>{t('cta.subtitle', locale)}</p>
          </div>
          <a href="/es/contacto" class="theme-btn hover-primary" data-hover={t('cta.button', locale)}>
            <span>{t('cta.button', locale)}</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-area-four {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-content-four h1 {
    font-size: clamp(2.5rem, 6vw, 5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.125rem;
    max-width: 600px;
    opacity: 0.9;
    line-height: 1.8;
  }

  .trusted-clients {
    display: flex;
    gap: -10px;
  }

  .client-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--ridda-primary-color), var(--ridda-secondary-color));
    border: 3px solid var(--ridda-heading-color);
    margin-left: -10px;
  }

  .client-avatar:first-child {
    margin-left: 0;
  }

  .counter-wrap {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    padding: 50px;
  }

  .counter-item {
    text-align: center;
    padding: 20px;
  }

  .count-text {
    font-size: 3rem;
    font-weight: 800;
    color: var(--ridda-primary-color);
    font-family: var(--ridda-heading-font);
    display: block;
  }

  .counter-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    display: block;
    margin: 10px 0;
  }

  .counter-item .text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  .about-circles {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .about-circles .circle {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-weight: 700;
    font-size: 1rem;
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: white;
  }

  .about-circles .circle.bgc-primary {
    color: var(--ridda-heading-color);
  }

  .ms-auto {
    margin-left: auto;
  }

  .service-timeline {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .service-limeline-item {
    display: flex;
    align-items: center;
    padding: 30px 40px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .service-limeline-item:hover {
    background: rgba(255, 255, 255, 0.02);
  }

  .service-limeline-item .number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--ridda-primary-color);
    min-width: 80px;
  }

  .service-limeline-item .h1 {
    flex: 1;
    font-size: clamp(1.5rem, 4vw, 3rem);
    font-weight: 800;
  }

  .service-limeline-item .h1 a {
    color: white;
  }

  .service-limeline-item .h1 a:hover {
    color: var(--ridda-primary-color);
  }

  .detail-btn {
    width: 60px;
    height: 60px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    transition: all 0.3s ease;
  }

  .detail-btn:hover {
    background: var(--ridda-primary-color);
    border-color: var(--ridda-primary-color);
    color: var(--ridda-heading-color);
  }

  @media (max-width: 767px) {
    .service-limeline-item {
      flex-wrap: wrap;
      gap: 15px;
      padding: 20px;
    }

    .service-limeline-item .number {
      min-width: 50px;
    }

    .detail-btn {
      width: 50px;
      height: 50px;
    }
  }
</style>
