---
import PageLayout from '@layouts/PageLayout.astro';
import { t } from '@i18n/index';

const locale = 'en';
---

<PageLayout
  title={t('meta.contact.title', locale)}
  description={t('meta.contact.description', locale)}
  bannerTitle={t('contact.title', locale)}
  bannerSubtitle={t('contact.subtitle', locale)}
>
  <section class="contact-page bgc-black text-white py-130 rpy-100">
    <div class="container bordered-x">
      <!-- Contact Info Header -->
      <div class="row justify-content-center mb-60">
        <div class="col-lg-8">
          <div class="contact-info-header text-center">
            <p class="mb-30">{t('contact.description', locale)}</p>
            <div class="contact-methods">
              <div class="contact-method">
                <i class="fas fa-envelope"></i>
                <a href="mailto:hello@erickchan.dev">hello@erickchan.dev</a>
              </div>
              <div class="contact-method">
                <i class="fab fa-whatsapp"></i>
                <a href="https://wa.me/529982203423" target="_blank" rel="noopener noreferrer">+52 998 220 3423</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="contact-form-wrap">
            <h3 class="mb-30 text-center">{t('contact.formTitle', locale)}</h3>
            <form class="contact-form" action="#" method="POST">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="name">{t('contact.form.name', locale)} <span class="text-danger">*</span></label>
                    <input type="text" id="name" name="name" required maxlength="100" placeholder={t('contact.form.namePlaceholder', locale)} />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="email">{t('contact.form.email', locale)} <span class="text-danger">*</span></label>
                    <input type="email" id="email" name="email" required maxlength="100" placeholder={t('contact.form.emailPlaceholder', locale)} />
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-group">
                    <label for="message">{t('contact.form.message', locale)} <span class="text-danger">*</span></label>
                    <textarea id="message" name="message" rows="6" required maxlength="5000" placeholder={t('contact.form.messagePlaceholder', locale)}></textarea>
                  </div>
                </div>
                <div class="col-12">
                  <button type="submit" class="theme-btn submit-btn" data-hover={t('contact.form.submit', locale)}>
                    <span class="button-text">{t('contact.form.submit', locale)}</span>
                  </button>
                  <div class="form-message mt-3"></div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .contact-info-header {
    margin-bottom: 40px;
  }

  .contact-methods {
    display: flex;
    gap: 30px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
  }

  .contact-method i {
    font-size: 20px;
    color: #007bff;
  }

  .contact-method a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .contact-method a:hover {
    color: #007bff;
  }

  .contact-form-wrap {
    background: rgba(255, 255, 255, 0.03);
    padding: 50px;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .text-danger {
    color: #ff4444;
  }

  .form-message {
    font-size: 14px;
    font-weight: 500;
  }

  .form-message.success {
    color: #25D366;
  }

  .form-message.error {
    color: #ff4444;
  }

  @media (max-width: 767px) {
    .contact-form-wrap {
      padding: 30px 20px;
    }

    .contact-methods {
      flex-direction: column;
      gap: 15px;
    }
  }
</style>

<script>
  const form = document.querySelector('.contact-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
  const buttonText = submitBtn?.querySelector('.button-text') as HTMLElement;
  const formMessage = form?.querySelector('.form-message') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Disable button and show loading state
    if (submitBtn) submitBtn.disabled = true;
    if (buttonText) buttonText.textContent = 'Sending...';
    if (formMessage) {
      formMessage.textContent = '';
      formMessage.className = 'form-message mt-3';
    }

    try {
      const formData = new FormData(form);
      // Use absolute URL to avoid i18n routing issues
      const apiUrl = `${window.location.origin}/api/contact`;
      const response = await fetch(apiUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: formData.get('name'),
          email: formData.get('email'),
          message: formData.get('message')
        })
      });

      const data = await response.json();

      if (response.ok) {
        if (formMessage) {
          formMessage.textContent = 'Message sent successfully!';
          formMessage.classList.add('success');
        }
        form.reset();
      } else {
        throw new Error(data.error || 'Error sending message');
      }
    } catch (error) {
      console.error('Error:', error);
      if (formMessage) {
        formMessage.textContent = 'Error sending message. Please try again.';
        formMessage.classList.add('error');
      }
    } finally {
      // Re-enable button
      if (submitBtn) submitBtn.disabled = false;
      if (buttonText) buttonText.textContent = 'Send Message';
    }
  });
</script>
