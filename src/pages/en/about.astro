---
import PageLayout from '@layouts/PageLayout.astro';
import { t } from '@i18n/index';

const locale = 'en';
---

<PageLayout
  title={`${t('about.subtitle', locale)} - Erick Chan`}
  bannerTitle={t('about.subtitle', locale)}
>
  <section class="about-page bgc-black text-white py-130 rpy-100">
    <div class="container bordered-x">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="coming-soon text-center">
            <h2>Coming Soon</h2>
            <p>This section is under development. Soon you'll be able to learn more about me and my journey.</p>
            <a href="/en/" class="theme-btn mt-30" data-hover="Back to Home">
              <span>Back to Home</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .coming-soon {
    padding: 100px 0;
  }

  .coming-soon h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--ridda-primary-color), var(--ridda-secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .coming-soon p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.125rem;
  }
</style>
